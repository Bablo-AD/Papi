<?xml version="1.0"?>
<robot name="kai" xmlns:xacro="http://ros.org/wiki/xacro">

  <!-- Base link (Plastic Box) -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.25 0.13 0.05"/> <!-- dimensions: length, width, height -->
      </geometry>
      <origin xyz="0 0 0"/>
      <material name="grey"/>
    </visual>
  </link>

  <!-- Servo Motor 1 -->
  <link name="servo_motor_1">
    <visual>
      <geometry>
        <box size="0.04 0.02 0.04"/> <!-- approximate size of MG995 servo motor -->
      </geometry>
      <origin xyz="0.125 0 0.02"/> <!-- positioning relative to the base link -->
      <material name="black"/>
    </visual>
  </link>

  <!-- Servo Motor 2 -->
  <link name="servo_motor_2">
    <visual>
      <geometry>
        <box size="0.04 0.02 0.04"/> <!-- approximate size of MG995 servo motor -->
      </geometry>
      <origin xyz="0.115 0 0.08"/> <!-- positioning relative to the first servo motor -->
      <material name="black"/>
    </visual>
  </link>

  <!-- Arm attached to Servo Motor 2 -->
  <link name="arm">
    <visual>
      <geometry>
        <box size="0.15 0.01 0.01"/> <!-- size of the arm -->
      </geometry>
      <origin xyz="0 0 0.04"/> <!-- positioning relative to the second servo motor -->
      <material name="blue"/>
    </visual>
  </link>

  <!-- Joints -->

  <!-- Fixed joint between base link and servo motor 1 -->
  <joint name="base_to_servo1" type="fixed">
    <parent link="base_link"/>
    <child link="servo_motor_1"/>
    <origin xyz="0.125 0 0.025"/>
  </joint>

  <!-- Rotational joint for servo motor 1 -->
  <joint name="servo1_to_servo2" type="revolute">
    <parent link="servo_motor_1"/>
    <child link="servo_motor_2"/>
    <origin xyz="0 0 0.04"/>
    <axis xyz="0 0 1"/>
    <limit effort="10.0" lower="-1.57" upper="1.57" velocity="1.0"/>
  </joint>

  <!-- Rotational joint for servo motor 2 -->
  <joint name="servo2_to_arm" type="revolute">
    <parent link="servo_motor_2"/>
    <child link="arm"/>
    <origin xyz="0 0 0.04"/>
    <axis xyz="0 0 1"/>
    <limit effort="10.0" lower="-1.57" upper="1.57" velocity="1.0"/>
  </joint>

</robot>