<?xml version="1.0"?>
<robot name="custom_robot">

  <!-- Base Link -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.1 0.1 0.02"/> <!-- Adjust dimensions as needed -->
      </geometry>
      <material name="grey"/>
    </visual>
  </link>

  <!-- First Servo Joint -->
  <joint name="joint1" type="continuous">
    <parent link="base_link"/>
    <child link="servo_link1"/>
    <origin xyz="0 0 0.02" rpy="0 0 0"/> <!-- Adjust the position and orientation as needed -->
    <axis xyz="0 0 1"/>
  </joint>

  <link name="servo_link1">
    <visual>
      <geometry>
        <box size="0.03 0.03 0.05"/> <!-- Adjust dimensions as needed -->
      </geometry>
      <material name="blue"/>
    </visual>
  </link>

  <!-- Second Servo Joint -->
  <joint name="joint2" type="continuous">
    <parent link="servo_link1"/>
    <child link="servo_link2"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/> <!-- Adjust the position and orientation as needed -->
    <axis xyz="0 1 0"/>
  </joint>

  <link name="servo_link2">
    <visual>
      <geometry>
        <box size="0.03 0.03 0.05"/> <!-- Adjust dimensions as needed -->
      </geometry>
      <material name="red"/>
    </visual>
  </link>

  <!-- Ruler Link -->
  <joint name="joint3" type="fixed">
    <parent link="servo_link2"/>
    <child link="ruler_link"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/> <!-- Adjust the position and orientation as needed -->
  </joint>

  <link name="ruler_link">
    <visual>
      <geometry>
        <box size="0.3 0.02 0.02"/> <!-- Adjust dimensions as needed -->
      </geometry>
      <material name="transparent"/>
    </visual>
  </link>

  <!-- Pen Link -->
  <joint name="joint4" type="fixed">
    <parent link="ruler_link"/>
    <child link="pen_link"/>
    <origin xyz="0.15 0 0" rpy="0 0 0"/> <!-- Adjust the position and orientation as needed -->
  </joint>

  <link name="pen_link">
    <visual>
      <geometry>
        <cylinder radius="0.01" length="0.15"/> <!-- Adjust dimensions as needed -->
      </geometry>
      <material name="white"/>
    </visual>
  </link>

</robot>